generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             Int      @id @default(autoincrement())
  publicId       String
  title          String
  description    String
  originalSize   String
  compressedSize String? // Make this optional
  duration       Int? // Make this optional
  url            String? // Make this optional
  createdAt      DateTime @default(now())
  page           String
}
